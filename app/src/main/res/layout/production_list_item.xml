<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/produc_list_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/produc_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="72dp"
        android:padding="8dp"
        android:text="18/08/2020" />

    <TextView
        android:id="@+id/produc_list_item_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="72dp"
        android:padding="8dp"
        android:text="26" />

    <TextView
        android:id="@+id/produc_list_item_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="72dp"
        android:padding="8dp"
        android:text="15" />

    <TextView
        android:id="@+id/produc_list_item_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="72dp"
        android:padding="8dp"
        android:text="25" />

    <TextView
        android:id="@+id/produc_list_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="72dp"
        android:padding="8dp"
        android:text="66" />


</LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/produc_list_item_pen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>